{
  "manifest_version": 3,
  "name": "AIvengers - Quick Fact Check",
  "version": "1.0.1",
  "description": "Right-click any text to instantly fact-check it or paste the analyzed version back into the page. Assemble against fake news!",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AIvengers - Assemble Against Fake News!",
    "default_icon": {
      "16": "icons/iconaivenger (16).png",
      "32": "icons/iconaivenger (32).png",
      "48": "icons/iconaivenger (48).png",
      "128": "icons/iconaivenger (128).png"
    }
  },
  "icons": {
    "16": "icons/iconaivenger (16).png",
    "32": "icons/iconaivenger (32).png",
    "48": "icons/iconaivenger (48).png",
    "128": "icons/iconaivenger (128).png"
  },
  "commands": {
    "fact-check-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Fact-check selected text with AIvengers"
    }
  }
}


